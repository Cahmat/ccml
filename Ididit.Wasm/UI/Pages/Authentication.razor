    public string Action { get; set; } = null!;

    protected override void OnParametersSet()
    {
        if (Action == "logged-out")
        {
            Navigation.NavigateTo("/");
        }

        if (Action == "logged-in")
        {
        }
    }

    void OnLogInSucceeded()
    {
    }

    void OnLogOutSucceeded()
    {
    }
}
