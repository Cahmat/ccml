@if (EditCategory == Category && Category != null)
{
    <Addons Flex=Flex.NoWrap>
        <TextEdit @ref=_textEdit Size="Size.Small" @bind-Text="@Category.Name" Placeholder="Add new category" />
        <Addon AddonType="AddonType.End">
            <Button Color="Color.Primary" Outline="true" Size="Size.Small" @onclick=SaveName><Icon Name="IconName.Save" /></Button>
            <Button Color="Color.Primary" Outline="true" Size="Size.Small" @onclick=CancelEdit><Icon Name="IconName.Times" /></Button>
        </Addon>
    </Addons>
}
else
{
    <Addons Flex=Flex.NoWrap>
        <TextEdit Size="Size.Small" Text="@Category?.Name" ReadOnly=true />

        <Addon AddonType="AddonType.End">
            <Button Color="Color.Primary" Outline="true" Size="Size.Small" @onclick=EditName><Icon Name="IconName.Edit" /></Button>
            <Button Color="Color.Primary" Outline="true" Size="Size.Small" @onclick=DeleteCategory><Icon Name="IconName.Delete" /></Button>
        </Addon>
    </Addons>
}