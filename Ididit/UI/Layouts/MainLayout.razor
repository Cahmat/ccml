@using Ididit.UI.Pages

@inherits LayoutComponentBase

<HeadContent>
    @if (_bootswatchThemes.ContainsKey(Repository.Settings.Theme))
    {
        <link rel="stylesheet" href="@($"https://cdn.jsdelivr.net/npm/bootswatch@4.6.1/dist/{Repository.Settings.Theme}/bootstrap.min.css")" integrity="@(_bootswatchThemes[Repository.Settings.Theme])" crossorigin="anonymous">
    }
    else
    {
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/css/bootstrap.min.css" integrity="sha384-zCbKRCUGaJDkqS1kPbPd7TveP5iyJE0EjAuZQTgFLD2ylzuqKfdKlfG/eSrtxUkn" crossorigin="anonymous">
    }
</HeadContent>

<CascadingValue Value=Size>
<Container Fluid=true Height=Height.Is100 Display=Display.Flex Flex=Flex.Column>
    <Row>
        <Column Border=Border.Is1 Display=Display.Flex>

            <Button Color="Color.Primary" Outline="true" Size="Size" Margin=Margin.IsAuto.FromTop.IsAuto.FromBottom.Is3.FromEnd Padding=Padding.Is0.Is1.OnX Clicked="ToggleOptions"><Icon Name="IconName.Wrench" /></Button>

            <Span Flex=Flex.Grow.Is1 style="font-family: 'Caveat', cursive; font-size: 1.5em;">ididit!</Span>

        </Column>
    </Row>
    <Row Flex=Flex.Grow.Is1 Overflow=Overflow.Hidden Background=Background.Secondary>
        @if (_showOptions)
        {
            <Options Themes="_bootswatchThemes.Keys" />
        }
        else
        {
            @Body
        }
    </Row>
    <Row>
        <Column Border=Border.Is1>
            <span>&#169; 2022</span>
        </Column>
    </Row>
</Container>
</CascadingValue>

